<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Barangay Officials Directory</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('partials/navbar') %>

  <!-- Hero Section -->
  <section class="hero is-primary">
    <div class="hero-body">
      <div class="container">
        <h1 class="title is-1">ğŸ˜ï¸ Barangay Officials Directory</h1>
        <p class="subtitle is-4">Barangay San Jose â€¢ Term 2023-2026</p>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="section">
    <div class="container">
      <!-- Action Bar -->
      <div class="level mb-5">
        <div class="level-left">
          <div class="level-item">
            <p class="subtitle">Total Officials: <strong><%= officials.length %></strong></p>
          </div>
        </div>
        <div class="level-right">
          <div class="level-item">
            <a href="/add" class="button is-primary is-medium">
              <strong>â• Add New Official</strong>
            </a>
          </div>
        </div>
      </div>

      <!-- Officials Cards -->
      <% if (officials.length === 0) { %>
        <div class="notification is-info">
          <p><strong>No officials registered yet.</strong></p>
          <p>Click "Add New Official" to get started.</p>
        </div>
      <% } else { %>
        <div class="columns is-multiline">
          <% officials.forEach(official => { %>
            <div class="column is-one-third">
              <div class="card official-card">
                <div class="card-content">
                  <!-- Profile Header -->
                  <div class="media">
                    <div class="media-left">
                      <figure class="image is-64x64">
                        <div class="avatar-circle">
                          <%= official.name.split(' ').map(n => n[0]).join('') %>
                        </div>
                      </figure>
                    </div>
                    <div class="media-content">
                      <p class="title is-5"><%= official.name %></p>
                      <p class="subtitle is-6">
                        <% if (official.position === 'Barangay Captain') { %>
                          <span class="tag is-primary is-medium">ğŸ‘‘ <%= official.position %></span>
                        <% } else if (official.position === 'Barangay Kagawad') { %>
                          <span class="tag is-info is-medium">ğŸ“‹ <%= official.position %></span>
                        <% } else if (official.position === 'SK Chairperson') { %>
                          <span class="tag is-warning is-medium">ğŸ“ <%= official.position %></span>
                        <% } else { %>
                          <span class="tag is-link is-medium"><%= official.position %></span>
                        <% } %>
                      </p>
                    </div>
                  </div>

                  <!-- Contact Information -->
                  <div class="content">
                    <p class="mb-2">
                      <strong>ğŸ“± Contact:</strong><br>
                      <%= official.contact %>
                    </p>
                    <p class="mb-2">
                      <strong>ğŸ  Address:</strong><br>
                      <%= official.address %>
                    </p>
                    <p class="mb-2">
                      <strong>ğŸ“… Term:</strong> <%= official.term %>
                    </p>
                  </div>
                </div>
              </div>
            </div>
          <% }); %>
        </div>

        <!-- Statistics -->
        <div class="box mt-6">
          <h3 class="title is-4">ğŸ“Š Summary</h3>
          <div class="columns">
            <div class="column">
              <p class="heading">Barangay Captain</p>
              <p class="title is-3">
                <%= officials.filter(o => o.position === 'Barangay Captain').length %>
              </p>
            </div>
            <div class="column">
              <p class="heading">Kagawad</p>
              <p class="title is-3">
                <%= officials.filter(o => o.position === 'Barangay Kagawad').length %>
              </p>
            </div>
            <div class="column">
              <p class="heading">Staff</p>
              <p class="title is-3">
                <%= officials.filter(o => o.position === 'Barangay Secretary' || o.position === 'Barangay Treasurer').length %>
              </p>
            </div>
            <div class="column">
              <p class="heading">SK Chairperson</p>
              <p class="title is-3">
                <%= officials.filter(o => o.position === 'SK Chairperson').length %>
              </p>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </section>

  <%- include('partials/footer') %>
</body>
</html>
