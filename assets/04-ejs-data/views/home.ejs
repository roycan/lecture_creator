<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Student List</title>
  <!-- Bulma CSS CDN -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <!-- Navigation -->
  <nav class="navbar is-primary" role="navigation" aria-label="main navigation">
    <div class="navbar-brand">
      <a class="navbar-item" href="/">
        <strong>Student System</strong>
      </a>
    </div>

    <div class="navbar-menu">
      <div class="navbar-start">
        <a class="navbar-item" href="/">Home</a>
        <a class="navbar-item" href="/about">About</a>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <section class="section">
    <div class="container">
      <h1 class="title">Student List</h1>
      <p class="subtitle">Showing <%= students.length %> students</p>

      <!-- Student Cards -->
      <div class="columns is-multiline">
        <% students.forEach(student => { %>
          <div class="column is-half">
            <div class="card">
              <div class="card-content">
                <div class="media">
                  <div class="media-content">
                    <p class="title is-4"><%= student.name %></p>
                    <p class="subtitle is-6"><%= student.course %></p>
                  </div>
                </div>

                <div class="content">
                  <p>
                    <strong>Grade:</strong>
                    <span class="tag <%= student.grade >= 90 ? 'is-success' : student.grade >= 80 ? 'is-info' : student.grade >= 75 ? 'is-warning' : 'is-danger' %>">
                      <%= student.grade %>
                    </span>
                  </p>
                  
                  <% if (student.grade >= 90) { %>
                    <p class="has-text-success">‚≠ê Excellent performance!</p>
                  <% } else if (student.grade >= 80) { %>
                    <p class="has-text-info">üëç Good work!</p>
                  <% } else if (student.grade >= 75) { %>
                    <p class="has-text-warning">üìö Passed, but needs improvement</p>
                  <% } else { %>
                    <p class="has-text-danger">‚ùå Failed - needs support</p>
                  <% } %>
                </div>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="footer">
    <div class="content has-text-centered">
      <p>
        <strong>Student Management System</strong> - Built with Express, EJS, and Bulma
      </p>
    </div>
  </footer>
</body>
</html>
