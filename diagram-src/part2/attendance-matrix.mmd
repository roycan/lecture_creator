flowchart TB
    subgraph Matrix["Student Performance Matrix"]
        direction TB
        
        High["High Performance<br/>average >= 90"]
        Good["Good Performance<br/>75 <= average < 90"]
        Low["Needs Improvement<br/>average < 75"]
        
        HighGoodAtt["+ Good Attendance<br/>attendance >= 90%"]
        HighLowAtt["+ Low Attendance<br/>attendance < 90%"]
        
        GoodGoodAtt["+ Good Attendance<br/>attendance >= 90%"]
        GoodLowAtt["+ Low Attendance<br/>attendance < 90%"]
        
        LowGoodAtt["+ Good Attendance<br/>attendance >= 90%"]
        LowLowAtt["+ Low Attendance<br/>attendance < 90%"]
    end
    
    High --> HighGoodAtt
    High --> HighLowAtt
    Good --> GoodGoodAtt
    Good --> GoodLowAtt
    Low --> LowGoodAtt
    Low --> LowLowAtt
    
    style High fill:#d1fae5,stroke:#10b981,stroke-width:2px
    style Good fill:#dbeafe,stroke:#3b82f6,stroke-width:2px
    style Low fill:#fee2e2,stroke:#ef4444,stroke-width:2px
    style HighGoodAtt fill:#ecfdf5,stroke:#10b981
    style GoodGoodAtt fill:#dbeafe,stroke:#3b82f6
    style LowGoodAtt fill:#fef3c7,stroke:#f59e0b
    style HighLowAtt fill:#fef3c7,stroke:#f59e0b
    style GoodLowAtt fill:#fef3c7,stroke:#f59e0b
    style LowLowAtt fill:#fee2e2,stroke:#ef4444
